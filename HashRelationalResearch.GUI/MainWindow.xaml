<Window x:Class="HashRelationalResearch.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HashRelationalResearch.GUI"
        xmlns:vm="clr-namespace:HashRelationalResearch.GUI.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="950" Width="1200">
    <Window.DataContext>
        <vm:MainWindowVM />
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="MenuItem_Click" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>
        <local:ResearchTab Grid.Row="1"></local:ResearchTab>
    </Grid>
    
    
</Window>
